def scraped_site_title
    test_array = [{'title' => 'how to text', 'content' => 'just do it'}, {'title' => 'how to email', 'content' => 'just do it, too'}]
    test_array.collect do |hash|
        hash.each_with_index {|title, index|
        puts "#{index}. #{title}"}
    end
end

